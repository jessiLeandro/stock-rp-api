{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "prettier-standard",
        "prettier",
        "plugin:jest/all",
        "plugin:node/recommended"
    ],
    "plugins": ["jest"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": ["error", "never"]
    }
}
